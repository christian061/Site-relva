root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,vue}]
quote_type = single

[*.{html,css,scss,less,styl}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab

[Dockerfile]
indent_style = tab

[*.{diff,md}]
trim_trailing_whitespace = false
